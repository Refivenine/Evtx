{
  "name": "EVTX Network",
  "short_name": "EVTX",
  "description": "The next-generation social network for sharing video links, photos, and connecting with friends globally.",
  "id": "./index.html",
  "start_url": "./index.html",
  "scope": "./",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "background_color": "#000000",
  "theme_color": "#bf00ff",
  "orientation": "portrait-primary",
  "lang": "en-US",
  "dir": "ltr",
  "categories": ["social", "entertainment"],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.evtx.network",
      "id": "com.evtx.network"
    }
  ],
  "scope_extensions": [
    {
      "origin": "https://refivenine.github.io"
    }
  ],
  "icons": [
    {
      "src": "logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "https://via.placeholder.com/540x960.png?text=EVTX+Mobile",
      "sizes": "540x960",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Feed"
    },
    {
      "src": "https://via.placeholder.com/1920x1080.png?text=EVTX+Desktop",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Desktop View"
    }
  ],
  "shortcuts": [
    {
      "name": "Open Chat",
      "url": "./index.html#chat"
    }
  ],
  "share_target": {
    "action": "./index.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+evtx",
      "url": "./index.html?type=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "image/png": [".png"],
        "image/jpeg": [".jpg", ".jpeg"]
      }
    }
  ],
  "widgets": [
    {
      "name": "EVTX Shortcut",
      "description": "Quick launch",
      "tag": "evtx_widget",
      "template": "logo.png",
      "screenshots": []
    }
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "note_taking": {
    "new_note_url": "./index.html#note"
  }
}
